include utils.pug

doctype html
html
  head
      block head
        title="Quicklist App"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/layout.css')
        link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.css")
        link(rel='stylesheet' href='/stylesheets/groups.css')
        script(src="/javascripts/layout.js")
        script(src="/javascripts/dynamic.js")

  body
    nav
      div
        h1.logo= `Quicklist ${userName}`
      a.logout(href="/users/logout") Logout
    aside
      a(onclick=`groupView(${dashboard}, "Dashboard")` id=`/users/${userId}/${dashboard}`).dashbutton Dashboard
      form(action=`/users/${userId}/${groupId}/create-group` method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        input(type='input' name='name' placeholder="Group Name" required)
        button(type='submit' ) Add
      .groupButton
        header.groupTop
          span(class="material-icons" style="font-size:22px;")= "expand_more"
          h2.groups Groups
        +groupList(groups)
    block errors
    content.group
      block tasksList
    content.task
      block group
      block task
    footer
        .Jarif
          h3 Jarif Ahmed
          .links
            a(href="https://www.linkedin.com/in/jarifnahmed/" class="fab fa-linkedin-in" target="_blank")
            a(href="https://github.com/jarifnahmed" class="fab fa-github" target="_blank")
        a(href="https://github.com/jarifnahmed/quicklist_project/" class="fab fa-github" target="_blank")
          div= "       Project Repo"
